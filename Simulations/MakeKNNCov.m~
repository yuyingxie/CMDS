%function [outputArg1,outputArg2] = MakeKNNCov(d,K)
%UNTITLED3 Summary of this function goes here
%   Detailed explanation goes here
% Generate points from 2-d uniform distribution in the cube:
X = rand(d,2);
[idx, D] = knnsearch(X,X,'K',K+1);
C = zeros(d,d);
for i=1:d
    for j=1:K+1
        %C(i, idx(i,j)) = exp(-D(i,j)^2);
        if idx(i,j)==i
            C(i, idx(i,j))=1;
            
        C(i, idx(i,j)) = D(i,j);
    end
end
%end

